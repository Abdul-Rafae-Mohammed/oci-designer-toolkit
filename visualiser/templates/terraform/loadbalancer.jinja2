#        # Optional
#        verify_depth            = {{ ssl_verify_depth }}
#        verify_peer_certificate = {{ ssl_verify_peer_certificate }}
#    }
}

locals {
    {{ resource_name }}Listener_id            = oci_load_balancer_listener.{{ resource_name }}Listener.id
}
